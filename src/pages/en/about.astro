---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<BaseLayout title="About — SectLauncher" description="Cross-platform Minecraft launcher with modular architecture.">
  <Fragment slot="header"><Header /></Fragment>
  <Fragment slot="head">
    <link rel="canonical" href="https://sectlauncher.byteflipper.com/en/about/" />
    <link rel="alternate" hreflang="ru" href="https://sectlauncher.byteflipper.com/ru/about/" />
    <link rel="alternate" hreflang="x-default" href="https://sectlauncher.byteflipper.com/ru/about/" />
    <meta property="og:url" content="https://sectlauncher.byteflipper.com/en/about/" />
  </Fragment>

  <section class="hero-bg">
    <div class="mx-auto max-w-6xl px-4 py-14 grid lg:grid-cols-12 gap-8 items-center">
      <div class="lg:col-span-7">
        <h1 class="text-3xl md:text-4xl font-extrabold">SectLauncher — an engineering approach to launchers</h1>
        <p class="mt-4 text-neutral-300 text-lg">Kotlin Multiplatform, Clean Architecture and modular sources for stable builds and simple updates.</p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a href="/download" class="px-4 py-2.5 rounded-md font-semibold text-neutral-900 bg-emerald-500">Download</a>
          <a href="https://github.com/byteflipper-58/sectlauncher" class="px-4 py-2.5 rounded-md border border-neutral-700 hover:bg-neutral-800">GitHub</a>
          <a href="/blog" class="px-4 py-2.5 rounded-md border border-neutral-700 hover:bg-neutral-800">Blog</a>
        </div>
      </div>
      <div class="lg:col-span-5">
        <div class="rounded-2xl border border-neutral-800 bg-neutral-900/50 p-6">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-xl grid place-items-center text-xl font-bold text-neutral-900" style="background:linear-gradient(135deg,#ef116f,#fe6407)">BF</div>
            <div>
              <div class="font-bold text-lg">ByteFlipper</div>
              <div class="text-xs text-neutral-400">Developer</div>
            </div>
          </div>
          <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm">
            <a href="https://byteflipper.com" class="px-3 py-2 rounded-md border border-neutral-800 hover:bg-neutral-900">byteflipper.com</a>
            <a href="https://github.com/byteflipper-58" class="px-3 py-2 rounded-md border border-neutral-800 hover:bg-neutral-900">github.com/byteflipper-58</a>
            <a href="https://github.com/byteflipper-58/sectlauncher" class="px-3 py-2 rounded-md border border-neutral-800 hover:bg-neutral-900 sm:col-span-2">SectLauncher repo</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>

