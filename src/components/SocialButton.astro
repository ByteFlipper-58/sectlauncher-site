const config = platformConfig[platform];
const displayTitle = title || config.name;

const sizeConfig = {
  sm: {
    padding: 'px-2 py-1.5',
    icon: 'w-3.5 h-3.5',
    text: 'text-xs',
    subtitle: 'text-xs'
  },
  md: {
    padding: 'px-3 py-2',
    icon: 'w-4 h-4',
    text: 'text-sm',
    subtitle: 'text-xs'
  },
  lg: {
    padding: 'px-4 py-3',
    icon: 'w-5 h-5',
    text: 'text-sm',
    subtitle: 'text-xs'
  }
};

const sizeProps = sizeConfig[size];
---

{variant === 'compact' ? (
  <a 
    href={href} 
    target="_blank" 
    rel="noopener noreferrer"
    class={`group inline-flex items-center gap-2 ${sizeProps.padding} rounded-lg border transition-all duration-200 hover:scale-105 hover:shadow-lg backdrop-blur-sm ${config.colors} ${additionalClasses}`}
    title={displayTitle}
  >
    <svg class={`${sizeProps.icon} ${config.textColors} transition-colors flex-shrink-0`} viewBox="0 0 24 24" fill={platform === 'email' ? 'none' : 'currentColor'} stroke={platform === 'email' ? 'currentColor' : 'none'} set:html={config.icon}></svg>
    <span class={`${sizeProps.text} font-medium ${config.textColors} transition-colors`}>{displayTitle}</span>
  </a>
) : (
  <a 
    href={href} 
    target="_blank" 
    rel="noopener noreferrer"
    class={`group flex items-center gap-3 ${sizeProps.padding} rounded-xl border transition-all duration-300 hover:scale-105 hover:shadow-xl backdrop-blur-sm min-w-[160px] ${config.colors} ${additionalClasses}`}
    title={displayTitle}
  >
    <svg class={`${sizeProps.icon} ${config.textColors} transition-colors flex-shrink-0`} viewBox="0 0 24 24" fill={platform === 'email' ? 'none' : 'currentColor'} stroke={platform === 'email' ? 'currentColor' : 'none'} set:html={config.icon}></svg>
    <div class="text-left">
      <div class={`${sizeProps.text} font-semibold ${config.textColors} transition-colors`}>{displayTitle}</div>
      {subtitle && (
        <div class={`${sizeProps.subtitle} ${config.subtitleColors} transition-colors`}>{subtitle}</div>
      )}
    </div>
  </a>
)}
