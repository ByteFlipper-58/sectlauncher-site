---
interface Props {
  href: string;
  platform: 'telegram' | 'twitter' | 'whatsapp' | 'reddit' | 'email';
  variant?: 'compact' | 'full';
  title?: string;
  subtitle?: string;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

