---
interface Props {
  href: string;
  title: string;
  description?: string;
  date: string | Date;

  heroImage?: string;
  locale: 'ru' | 'en';
  premiere?: boolean;
  premiereAt?: string | Date;
  disabled?: boolean;
}
const { href, title, description, date, heroImage, locale, premiere = false, premiereAt, disabled = false }: Props = Astro.props;
const dateStr = new Date(date).toLocaleDateString(locale === 'ru' ? 'ru-RU' : 'en-US');
const premiereStr = premiereAt
  ? new Date(premiereAt).toLocaleString(locale === 'ru' ? 'ru-RU' : 'en-US', {
      year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit'
    })
  : '';
---

{disabled ? (
  <div class="group block rounded-xl border border-neutral-800 bg-neutral-900/40 overflow-hidden">
    <div class="relative h-44 overflow-hidden bg-neutral-900">
      {heroImage ? (
        <img src={heroImage} alt="" loading="lazy" class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-neutral-900 to-neutral-800" />
      )}
      <div class="absolute inset-0 bg-black/55" />
      {premiere && (
        <div class="absolute inset-x-0 bottom-0 p-3 bg-gradient-to-t from-black/70 to-transparent">
          <div class="inline-flex flex-col px-2 py-1 rounded bg-black/60 text-white text-xs">
            <span class="uppercase tracking-wide opacity-80">{locale === 'ru' ? 'Премьера' : 'Premiere'}</span>
            {premiereStr && (<span class="font-medium">{premiereStr}</span>)}
          </div>
        </div>
      )}
    </div>
    <div class="p-5">
      <h2 class="text-xl font-semibold tracking-tight">{title}</h2>
      {description && (<p class="text-neutral-400 mt-1 line-clamp-2">{description}</p>)}
      <div class="mt-3 flex items-center gap-3 text-xs text-neutral-500">
        <span>{dateStr}</span>

      </div>

    </div>
  </div>
) : (
  <a href={href}
    class="group block rounded-xl border border-neutral-800 bg-neutral-900/40 overflow-hidden transition-colors hover:border-emerald-500/40 focus:outline-none focus:ring-2 focus:ring-emerald-500/40">
    <div class="relative h-44 overflow-hidden bg-neutral-900">
      {heroImage ? (
        <img src={heroImage} alt="" loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-[1.03]" />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-neutral-900 to-neutral-800" />
      )}
      <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-neutral-950/70 via-transparent to-transparent" />
      {premiere && (
        <div class="absolute inset-x-0 bottom-0 p-3 bg-gradient-to-t from-black/50 to-transparent">
          <div class="inline-flex flex-col px-2 py-1 rounded bg-black/50 text-white text-xs">
            <span class="uppercase tracking-wide opacity-80">{locale === 'ru' ? 'Премьера' : 'Premiere'}</span>
            {premiereStr && (<span class="font-medium">{premiereStr}</span>)}
          </div>
        </div>
      )}
    </div>

    <div class="p-5">
      <h2 class="text-xl font-semibold tracking-tight group-hover:text-white">{title}</h2>
      {description && (<p class="text-neutral-400 mt-1 line-clamp-2">{description}</p>)}
      <div class="mt-3 flex items-center gap-3 text-xs text-neutral-500">
        <span>{dateStr}</span>

      </div>

    </div>
  </a>
)}

