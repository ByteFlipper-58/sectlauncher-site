---
interface Props { 
  type?: 'note' | 'tip' | 'warning' | 'danger' | 'info' | 'success';
  title?: string;
  icon?: string;
  dismissible?: boolean;
}

const { type = 'note', title, icon, dismissible = false }: Props = Astro.props;

const typeConfig = {
  note: {
    bgColor: 'bg-neutral-800/40',
    borderColor: 'border-neutral-600/60',
    textColor: 'text-neutral-300',
    titleColor: 'text-neutral-100',
    iconColor: 'text-neutral-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
  },
  info: {
    bgColor: 'bg-blue-900/20',
    borderColor: 'border-blue-600/60',
    textColor: 'text-blue-200',
    titleColor: 'text-blue-100',
    iconColor: 'text-blue-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
  },
  tip: {
    bgColor: 'bg-emerald-900/20',
    borderColor: 'border-emerald-600/60',
    textColor: 'text-emerald-200',
    titleColor: 'text-emerald-100',
    iconColor: 'text-emerald-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>`
  },
  success: {
    bgColor: 'bg-green-900/20',
    borderColor: 'border-green-600/60',
    textColor: 'text-green-200',
    titleColor: 'text-green-100',
    iconColor: 'text-green-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
  },
  warning: {
    bgColor: 'bg-yellow-900/20',
    borderColor: 'border-yellow-600/60',
    textColor: 'text-yellow-200',
    titleColor: 'text-yellow-100',
    iconColor: 'text-yellow-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>`
  },
  danger: {
    bgColor: 'bg-red-900/20',
    borderColor: 'border-red-600/60',
    textColor: 'text-red-200',
    titleColor: 'text-red-100',
    iconColor: 'text-red-400',
    defaultIcon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
  }
};

const config = typeConfig[type];
const iconSvg = icon || config.defaultIcon;
const uniqueId = `callout-${Math.random().toString(36).substr(2, 9)}`;
---

<div 
  class={`relative block w-full my-6 rounded-xl border ${config.borderColor} ${config.bgColor} backdrop-blur-sm shadow-lg transition-all duration-200 hover:shadow-xl overflow-hidden`}
  id={uniqueId}
>
  <!-- Декоративная полоска сверху -->
  <div class={`absolute top-0 left-0 w-full h-px ${config.borderColor.replace('border-', 'bg-').replace('/60', '/40')}`}></div>
  
  <div class="flex items-start gap-3 p-4">
    <!-- Иконка -->
    <div class={`flex-shrink-0 w-6 h-6 ${config.iconColor} mt-0.5`}>
      <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={iconSvg}></svg>
    </div>
    
    <!-- Контент -->
    <div class="flex-1 min-w-0">
      {title && (
        <div class={`font-semibold text-base mb-2 ${config.titleColor}`}>
          {title}
        </div>
      )}
      <div class={`${config.textColor} text-sm leading-relaxed [&>p:last-child]:mb-0`}>
        <slot />
      </div>
    </div>
    
    <!-- Кнопка закрытия -->
    {dismissible && (
      <button 
        type="button"
        class={`flex-shrink-0 w-5 h-5 ${config.iconColor} hover:text-white transition-colors ml-2 mt-0.5`}
        onclick={`document.getElementById('${uniqueId}').style.display='none'`}
        title="Закрыть"
      >
        <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    )}
  </div>
</div>


