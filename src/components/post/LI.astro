---
interface Props {
  class?: string;
  value?: number;
}

const { class: additionalClasses = '', value }: Props = Astro.props;
---

<li class={`${additionalClasses}`} value={value}>
  <slot />
</li>

<style>
  li {
    line-height: 1.6;
    word-wrap: break-word;
  }

  li :global(code) {
    font-size: 0.875em;
    padding: 0.125rem 0.25rem;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 0.25rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  li :global(a) {
    color: #60a5fa;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  li :global(a):hover {
    color: #93c5fd;
    text-decoration: underline;
  }

  li :global(strong) {
    color: white;
    font-weight: 600;
  }

  li :global(em) {
    color: #d1d5db;
    font-style: italic;
  }
</style>
