---
interface Props { 
  url: string; 
  title: string; 
  text?: string;
  locale?: 'ru' | 'en';
}
const { url, title, text, locale = 'en' }: Props = Astro.props;

const t = (key: string) => {
  const ru = { 
    share: 'Поделиться', 
    copied: 'Скопировано!',
    copyUrl: 'Копировать ссылку'
  } as const;
  const en = { 
    share: 'Share', 
    copied: 'Copied!',
    copyUrl: 'Copy URL'
  } as const;
  return (locale === 'ru' ? ru : en)[key as keyof typeof ru];
}

const tg = `https://t.me/share/url?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
const tw = `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
const wa = `https://wa.me/?text=${encodeURIComponent(title + ' ' + url)}`;
const reddit = `https://reddit.com/submit?url=${encodeURIComponent(url)}&title=${encodeURIComponent(title)}`;
---

<div class="flex flex-wrap items-center gap-2">
  <button 
    type="button" 
    class="group flex items-center gap-2 px-3 py-2 rounded-lg border border-neutral-700 bg-gradient-to-r from-neutral-900/80 to-neutral-800/80 hover:from-neutral-800 hover:to-neutral-700 transition-all duration-200 hover:scale-105 hover:shadow-lg backdrop-blur-sm"
    id="ws-btn"
    title={t('share')}
  >
    <svg class="w-4 h-4 text-neutral-300 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
    </svg>
    <span class="text-sm font-medium text-neutral-300 group-hover:text-white transition-colors">{t('share')}</span>
  </button>

  <a 
    href={tg} 
    target="_blank" 
    rel="noopener" 
    class="group flex items-center gap-2 px-3 py-2 rounded-lg border border-sky-700/50 bg-gradient-to-r from-sky-900/80 to-sky-800/80 hover:from-sky-800 hover:to-sky-700 transition-all duration-200 hover:scale-105 hover:shadow-lg hover:shadow-sky-500/20 backdrop-blur-sm"
    title="Поделиться в Telegram"
